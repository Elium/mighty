{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "outDir": "lib",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "lodash",
      "mocha",
      "chai",
      "core-js"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "index.d.ts"
  ]
}
