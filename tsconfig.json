{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "outDir": "lib"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "index.d.ts"
  ]
}
